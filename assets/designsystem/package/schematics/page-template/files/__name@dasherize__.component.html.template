<% } else if (page === 'start') { %>
  <!-- ------------------- StartPage page template ------------------- -->

  <drv-startpage>
    <ng-container drv-startpage-content>
      <!-- HERE IS THE CONTENT -->

    <ng-content>**CONTENT**</ng-content>
      <!-- /content-block -->
    </ng-container>
    <ng-container drv-startpage-aside>
      <!-- HERE IS THE ASIDE CONTENT -->
      **ASIDE**
      <!-- /aside-block -->
    </ng-container>
  </drv-startpage>

<% } else if (page === 'app') { %>
  <!-- ------------------- AppPage page template --------------------- -->

  <drv-apppage [fullWidth]="true">
    <!-- navigation -->
    <drv-navigation navLabel="Hauptnavigation">
      <drv-navigation-list></drv-navigation-list>
      **SIDE-NAVIGATION**
    </drv-navigation>
    <!-- /navigation -->

    <!-- HERE IS THE CONTENT -->

    <ng-content>**CONTENT**</ng-content>
    <!-- /content-block -->
  </drv-apppage>

<% } else if (page === 'application') { %>
  <!-- ------------------- ApplicationPage page template ------------- -->

  <drv-apppage>
    <!-- help button -->
    <drv-button
      label="Häufige Fragen"
      iconType="question-mark"
      cssClass="drv-help__btn"
      class="drv-help-btn"
      kind="tertiary"
    ></drv-button>
    <!-- /help button -->

    <!-- progress navigation -->
    <drv-progressnav progressNavTitle="Antragsfortschritt">
      <drv-progressnavnode
        name="Progress Step 1"
        url="#"
        [completed]="true"
        labelCompleted="abgeschlossen"
        labelNotCompleted="'nicht abgeschlossen'"
      ></drv-progressnavnode>
      <drv-progressnavnode
        name="Progress Step 2"
        url="#"
        [current]="true"
        labelCompleted="abgeschlossen"
        labelNotCompleted="'nicht abgeschlossen'"
      ></drv-progressnavnode>
      <drv-progressnavnode
        name="Progress Step 3"
        url="#"
        labelCompleted="abgeschlossen"
        labelNotCompleted="'nicht abgeschlossen'"
      ></drv-progressnavnode>
      <drv-progressnavnode
        name="Progress Step 4"
        url="#"
        labelCompleted="abgeschlossen"
        labelNotCompleted="'nicht abgeschlossen'"
      ></drv-progressnavnode>
      <drv-progressnavnode
        name="Progress Step 5"
        url="#"
        labelCompleted="abgeschlossen"
        labelNotCompleted="'nicht abgeschlossen'"
      ></drv-progressnavnode>
    </drv-progressnav>
    <!-- /progress navigation -->

    <!-- HERE IS THE CONTENT -->

    <ng-content>**CONTENT**</ng-content>
    <!-- /content-block -->
  </drv-apppage>

<% } else { %>
  <!-- ------------------- BlankPage page template -------------------- -->

  <drv-blankpage [fullWidth]="true">
    <!-- HERE IS THE CONTENT -->

    <ng-content>**CONTENT**</ng-content>
    <!-- /content-block -->
  </drv-blankpage>

<% } %>

  <drv-footer
    id="footer"
    copyright="© Deutsche Rentenversicherung 2023"
    version="App-Version: 1.0.0"
    [items]="[
      { href: '#impressum', text: 'Impressum' },
      { href: '#datenschutz', text: 'Datenschutz' },
      { href: '#barrierefreiheit', text: 'Barrierefreiheit' },
      { href: '#hilfe', text: 'Hilfe', icon: 'question-mark' },
      {
        href: '#',
        text: 'DGS',
        htmltarget: '_blank',
        htmltitle: 'Deutsche Gebärden­sprache (Es öffnet sich eine neue Seite.)',
        icon: 'sign-language'
      },
      {
        href: '#',
        text: 'Leichte Sprache',
        htmltarget: '_blank',
        htmltitle: '(Es öffnet sich eine neue Seite.)',
        icon: 'easy-language'
      }
    ]"
  ></drv-footer>
</div>
