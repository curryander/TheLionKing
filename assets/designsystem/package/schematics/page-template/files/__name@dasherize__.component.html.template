<div class="drv-page">
  <div drv-grid>
    <div drv-row>
      <div drv-col>
        <drv-button
          cssClass="drv-skiplink"
          type="anchor"
          label="Zum Seiteninhalt"
          kind="secondary"
          href="#main"
          fullSizeOption="full"
          iconType="arrow-down"
        ></drv-button>
        <drv-button
          cssClass="drv-skiplink"
          type="anchor"
          label="Zum Ende der Seite"
          kind="secondary"
          href="#footer"
          fullSizeOption="full"
          iconType="arrow-down"
        ></drv-button>
      </div>
    </div>
  </div>

  <drv-notification
    type="toast"
    notificationId="globalNotifications"
    closeButtonLabel="Hinweis verbergen"
  ></drv-notification>

  <drv-loading loadingId="loading_id" accessibleText="Wird geladen ..."></drv-loading>

<% if (page !== 'application') { %>
  <drv-header
    [isLoggedIn]="true"
    loginPrefix="Angemeldet als "
    loginName="Marion Musterfrau"
    menuButtonLabel="Menü"
    logoutButtonLabel="Abmelden"
    [metaItems]="[
      {
        text: 'Gebärdensprache',
        htmltarget: '_blank',
        htmltitle: '(Es öffnet sich eine neue Seite.)',
        href: '#',
        icon: 'sign-language',
        iconOnly: true
      },
      {
        text: 'Leichte Sprache',
        htmltarget: '_blank',
        htmltitle: '(Es öffnet sich eine neue Seite.)',
        href: '#',
        icon: 'easy-language',
        iconOnly: true
      },
      {
        text: 'Hilfe',
        href: '#',
        icon: 'question-mark',
        htmltarget: '_blank',
        htmltitle: '(Es öffnet sich eine neue Seite.)'
      }
    ]"
    [mainItems]="[]"
    statusText="Abmeldung in 15 Min"
    ariaLabelNav="Hauptnavigation"
    logoLink="/"
    logoAltText="Deutsche Rentenversicherung – Online Dienste"
    headerLogoPath="/svg/drv-logo-Online-Dienste-large.svg"
    headerLogoSmallPath="/svg/drv-logo-Online-Dienste-small.svg"
    headerLogoPathDark="/svg/drv-logo-Online-Dienste-large--dark.svg"
    headerLogoSmallPathDark="/svg/drv-logo-Online-Dienste-small--dark.svg"
    headerLogoTitle="Zurück zur Startseite"
    [withThemeToggle]="true"
  ></drv-header>
<% } else { %>
  <drv-applicationheader
    appTitle="Antrag auf Versichertenrente (R0100)"
    pagetitle="Aktueller Seitentitel"
    triggerButtonLabel="Navigation anzeigen"
  >
    <drv-button
      iconType="close"
      kind="secondary"
      backgroundUI="dark"
      iconPosition="left"
      label="Schließen"
    ></drv-button>
  </drv-applicationheader>
<% } %>

